@section Styles {
    <link href="@Url.Content("~/css/user.css")" rel="stylesheet" type="text/css" />
}

@{ ViewData["Title"] = "Not allowed"; }

<main class="center text-center form-signin">
    <h1 class="h3 text-light mb-3 fw-normal">Geen toegang</h1>

    <div>
        <i class="fas fa-ban text-light lg" style="font-size:5em"></i> <p class="text-light">Je hebt geen toegang to deze pagina.</p>
    </div>
    <div>
        <form class="form-inline" asp-action="logout" asp-controller="user">
            <button type="submit" class="w-100 btn btn-lg btn-primary">Uitloggen</button>
        </form>
    </div>
    <p class="mt-3 mb-3 text-light">&copy; 2021</p>
</main>
