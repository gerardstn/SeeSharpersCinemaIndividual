@model HomeViewModel
 

<partial name="_Notice" model="Model.Notices"/>

<div class="row"><h1>Vandaag tot Donderdag</h1></div>

<div class="my-4">
    <form asp-controller="Home" asp-action="Index">
        <input type="text" name="uiTitle" placeholder="Title" />
        <input type="date" name="uiDate" />
        <select name="uiGenre">
            <option value="">Genre</option>
            @foreach (Genre genre in (Genre[])Enum.GetValues(typeof(Genre)))
            {
                <option value="@genre">@genre</option>
            }
        </select>
        <select name="uiViewIndication">
            <option value="">ViewIndication</option>
            @foreach (ViewIndication viewIndication in (ViewIndication[])Enum.GetValues(typeof(ViewIndication)))
            {
                <option value="@viewIndication">@viewIndication</option>
            }
        </select>
        <button class="btn btn-primary" type="submit">Filter</button>
        <button class="btn btn-danger" type="submit">Reset</button>
    </form>
</div>

<div class="row">
    @foreach (var item in Model.Playlists)
    {
        <div class="col-2 pl-1 pr-1">
            <div class="poster_custom card m-1">
                <a asp-action="Details" asp-route-id="@item.Id">
                    <img src="@item.Movie.PosterUrl" class="img-fluid" />
                </a>
                <div class="p-1">
                    <p class="poster_label">@item.Movie.Title</p>
                    <p class="poster_moviestart">@item.TimeSlot.SlotStart.ToString("dddd HH:mm")</p>
                    <p class="poster_room">Zaal @item.TimeSlot.RoomId</p>
                </div>
            </div>
        </div>
    }
</div>
