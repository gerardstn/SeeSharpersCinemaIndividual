@model SeeSharpersCinema.Models.Program.PlayList

@{
    ViewData["Title"] = "Verwijderen";
}

<h3>Weet je zeker dat je deze voorstelling wilt verwijderen?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeSlot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeSlot.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Id)
        </dd>
    </dl>

    <a class="btn btn-secondary" asp-action="Index">Terug naar het overzicht</a>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>
</div>
