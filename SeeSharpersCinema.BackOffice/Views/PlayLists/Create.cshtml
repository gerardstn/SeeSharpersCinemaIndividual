@model SeeSharpersCinema.Models.Program.PlayList

@{
    ViewData["Title"] = "Voorstelling toevoegen";
}

<h1>Voorstelling toevoegen</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TimeSlotId" class="control-label"></label>
                <select asp-for="TimeSlotId" class ="form-control" asp-items="ViewBag.TimeSlotId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Title" class="control-label">Filmtitel</label>
                <select asp-for="Movie.Title" class ="form-control" asp-items="ViewBag.Movie.Title"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Voorstelling toevoegen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Terug naar het overzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
