@model LoginUserViewModel

@section Styles {
    <link href="@Url.Content("~/css/user.css")" rel="stylesheet" type="text/css" />
}
@{ ViewData["Title"] = "Inloggen"; }

<main class="center text-center form-signin">
    <form asp-action="login" method="post">
        <img class="mb-4" src="~/Custom/user-tie-solid.svg" alt="" width="72" height="57">
        <h1 class="h3 text-light mb-3 fw-normal">Inloggen Back Office</h1>
        <div class="form-floating m-2">
            <label class="text-light" asp-for="UserName"></label>
            <input class="form-control"  placeholder="Naam" asp-for="UserName" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-floating m-2">
            <label class="text-light" asp-for="UserName"></label>
            <input class="form-control" placeholder="Wachtwoord" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Inloggen</button>
        <p class="mt-5 mb-3 text-light">&copy; 2021</p>
    </form>
</main>
